    <top>
        <MenuBar prefWidth="600.0" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New Maze" />
                  <MenuItem mnemonicParsing="false" text="Save Maze" />
                  <MenuItem mnemonicParsing="false" text="Load Maze" />
                  <MenuItem mnemonicParsing="false" text="Close" />
